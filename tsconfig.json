{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "target": "es5",
    "sourceMap": true,
    "lib": ["ESNext"],
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [".git", "node_modules"]
}
